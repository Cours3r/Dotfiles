# wm

set $mod Mod4 						#Default Modifier
set $editor st						#Default Terminal Emulator
set $font pango: tewi				#Default Font
font $font							#Font
floating_modifier $mod				#Floating Modifier
set $i3dir ~/.config/i3				#i3dir

# binds

# focus
bindsym $mod+h						focus left
bindsym $mod+j						focus down
bindsym $mod+k						focus up
bindsym $mod+l						focus right

# move
bindsym $mod+Shift+h				move left
bindsym $mod+Shift+j				move down
bindsym $mod+Shift+k				move up
bindsym $mod+Shift+l				move right

# splits
bindsym $mod+c split h
bindsym $mod+v split v

# launch
bindsym $mod+t						exec $editor -e tmux
bindsym $mod+Shift+t				exec $editor
bindsym $mod+b						exec firefox
bindsym $mod+Shift+b				exec qutebrowser
bindsym $mod+e						exec $editor -e ranger
bindsym $mod+shift+e				exec thunar
bindsym $mod+a						exec atom
bindsym $mod+shift+x				exec ~/.xlock/lock2.sh
bindsym Shift+XF86Eject				exec $editor -e scrot
bindsym $mod+m						exec matlab -desktop
bindsym $mod+Shift+q 				kill
bindsym Shift+F4 					exec pkill bash

# media
bindsym	XF86AudioRaiseVolume		exec pactl set-sink-volume 0 +5%
bindsym	XF86AudioLowerVolume		exec pactl set-sink-volume 0 -5%
bindsym	XF86AudioMute				exec --no-startup-id pactl set-sink-mute 0 toggle; exec pactl set-sink-volume 0 20%
bindsym XF86AudioPlay				exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext				exec --no-startup-id playerctl next
bindsym XF86AudioPrev				exec --no-startup-id playerctl previous

# brightness
bindsym XF86MonBrightnessUp 		exec xbacklight +10
bindsym XF86MonBrightnessDown 		exec xbacklight -10

# session
bindsym $mod+Shift+c 				reload
bindsym $mod+Shift+r 				restart
bindsym $mod+0 exec "i3-nagbar -t warning -m 'Exit?' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+d exec rofi -modi drun run -show drun -lines 10 -font $font #drun launcher
bindsym $mod+Shift+d exec rofi -show window -lines 10	#rofi program switcher

# layout
bindsym $mod+s 						layout stacking
bindsym $mod+w 						layout tabbed
bindsym $mod+x 						layout toggle split
bindsym $mod+f 						fullscreen toggle
bindsym $mod+Shift+space 			floating toggle 	#toggle float/tiling
bindsym $mod+space 					focus mode_toggle	#switch between float/tiling windows
bindsym $mod+u 						focus parent 		#focus parent
bindsym $mod+i 						focus child 		#focus child

# resize
bindsym $mod+r 						mode "resize"
mode "resize" {
        # resize windows
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # exit
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

# new window
new_window pixel 2
for_window [window_role="pop-up"] floating enablt
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable
for_window [class="(?i)VirtualBox" title="(?i)Manager"] floating enable
for_window [class="(?i)VirtualBox"] floating enable
for_window [class="(?i)blueman"] floating enable
for_window [class="(?i)lxappearance"] floating enable
for_window [class="(?i)pavucontrol"] floating enable
for_window [class="(?i)nm-connection-editor"] floating enable
for_window [class="(?i)gnome-system-monitor"] floating enable
for_window [class="(?i)Beancash-qt"] floating enable
for_window [class="(?i)nitrogen"] floating enable

# workspaces

# spaces
set $w1 "O # # # #"
set $w2 "# O # # #"
set $w3 "# # O # #"
set $w4 "# # # O #"
set $w5 "# # # # O"

# goto
bindsym $mod+1 workspace $w1
bindsym $mod+2 workspace $w2
bindsym $mod+3 workspace $w3
bindsym $mod+4 workspace $w4
bindsym $mod+5 workspace $w5

# move to
bindsym $mod+Shift+1 move container to $w1
bindsym $mod+Shift+2 move container to $w2
bindsym $mod+Shift+3 move container to $w3
bindsym $mod+Shift+4 move container to $w4
bindsym $mod+Shift+5 move container to $w5

# colors

