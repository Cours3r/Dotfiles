#####################################

# gaps

gaps inner 8
gaps outer 0

# gap controls
bindsym $mod+g mode "$mode_gaps"
mode "$mode_gaps" {
    bindsym $mod+j  gaps outer all plus 5
    bindsym $mod+k gaps outer all minus 5
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# autostart

exec --no-startup-id compton -f
exec --no-startup-id clipit
exec --no-startup-id nitrogen --restore

# bar

bar {
	colors {
		# Whole color settings
		background #1e1e1e
		statusline #ffffff
		separator  #1e1e1e

		# Type             border  background font
		focused_workspace  #1e1e1e #1e1e1e #c90e0e
		active_workspace   #1e1e1e #222222 #cf6a4c
		inactive_workspace #1e1e1e #1e1e1e #888888
		urgent_workspace   #aa0000 #990000 #ffffff
	}
	status_command bumblebee-status -m brightness pasink nic bluetooth uptime battery datetime -p root.path=/ time.format="%H:%M CW %V" date.format="%A, %b %d %Y" -t gruvbox-powerline -p nic.exclude="enp1s0,lo"
	font xft:Hack 8, FontAwesome 8
	position top
	tray_output none
}

